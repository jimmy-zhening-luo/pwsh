{
  "$id": "https://raw.githubusercontent.com/jimmy-zhening-luo/pwsh/refs/heads/main/dprint-schema-csharp.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "dprint C# Roslyn plugin rules schema",
  "type": "object",
  "properties": {
    "roslyn": {
      "type": "object",
      "properties": {
        "csharp.labelPositioning": {
          "$ref": "#/$defs/position"
        },
        "csharp.spacingAroundBinaryOperator": {
          "$ref": "#/$defs/spacing"
        }
      },
      "patternProperties": {
        "^csharp\\.(indent(Block|Braces|Switch(Section|CaseSection(WhenBlock)?))|newLine(For(Catch|ClausesInQuery|Else|Finally|MembersIn(AnonymousTypes|ObjectInit))|sForBracesIn(Accessors|Anonymous(Methods|Types)|ControlBlocks|LambdaExpressionBody|Methods|ObjectCollectionArrayInitializers|Properties|Types))|space(After(Cast|ColonInBaseTypeDeclaration|Comma|ControlFlowStatementKeyword|Dot|MethodCallName|SemicolonsInForStatement)|Before(ColonInBaseTypeDeclaration|Comma|Dot|OpenSquareBracket|SemicolonsInForStatement)|BetweenEmpty(Method(Call|Declaration)Parentheses|SquareBrackets)|Within(SquareBrackets|MethodDeclarationParenthesis|(Cast|Expression|MethodCall|Other)Parentheses)|sIgnoreAroundVariableDeclaration)|spacingAfterMethodDeclarationName|wrapping(KeepStatementsOn|Preserve)SingleLine)$": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "allowTrailingCommas": true,
      "allowComments": true
    }
  },
  "$defs": {
    "tristate": {
      "type": "integer",
      "enum": [
        0,
        1,
        2
      ]
    },
    "position": {
      "anyOf": [
        {
          "$ref": "#/$defs/tristate"
        },
        {
          "type": "string",
          "enum": [
            "LeftMost",
            "OneLess",
            "NoIndent"
          ]
        }
      ]
    },
    "spacing": {
      "anyOf": [
        {
          "$ref": "#/$defs/tristate"
        },
        {
          "type": "string",
          "enum": [
            "Single",
            "Ignore",
            "Remove"
          ]
        }
      ]
    }
  },
  "additionalProperties": true,
  "allowTrailingCommas": true,
  "allowComments": true
}
